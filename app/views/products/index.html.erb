<h1>Products</h1>

<table>
<thead>
  <th></th>
  <th>ID</th>
  <th>SKU</th>
  <th><Name</th>
  <th>Availability</th>
  <th>Condition</th>
</thead>
<tbody>
<% @products.each_with_index do |product, i| %>
  <tr>
    <td><%= i +1                  %></td>
    <td><%= product.id            %></td>
    <td><%= product.sku           %></td>
    <td><%= product.name          %></td>
    <td><%= product.availability  %></td>
    <td><%= product.condition     %></td>
    <td><img src="<%= product.meduim_main_images.first %>" style="height:50px"/></td>
  </tr>
<% end %>
</tbody>
</table>
