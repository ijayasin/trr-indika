<% #= render :partial => 'products_table', :locals => {:products => @products} %>

<table class="table">
  <thead>
  <th></th>
  <th>ID</th>
  <th>SKU</th>
  <th><Name</th>
  <th>Price</th>
  <th>Availability</th>
  <th>Condition</th>
  </thead>
  <tbody>
  <% products.each_with_index do |product, i| %>
      <tr>
        <th scope="row"><%= i +1      %></th>
        <td><%= product.id            %></td>
        <td><%= product.sku           %></td>
        <td><%= product.name          %></td>
        <td><%= humanized_money_with_symbol product.price %></td>
        <td><%= product.availability  %></td>
        <td><%= product.condition     %></td>
        <td><img src="<%= product.meduim_main_images.first %>" style="height:50px"/></td>
      </tr>
  <% end %>
  </tbody>
</table>
